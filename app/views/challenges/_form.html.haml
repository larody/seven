= form_for @challenge do |f|
  - if @challenge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@challenge.errors.count, "error")} prohibited this challenge from being saved:"
      %ul
        - @challenge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, placeholder: 'Wake Up at 6 AM'
  .field
    = f.label :status
    = f.select :status, [['Stand By', 0], ['On Going', 1], ['Finished', 2]]
  .field
    = f.label :start_date
    = f.text_field :start_date
  .field
    = f.label :end_date
    = f.text_field :end_date
  .field
    = f.label :quota
    = f.number_field :quota
  .field
    = f.label :reward
    = f.text_field :reward
  .actions
    = f.submit 'Submit'
